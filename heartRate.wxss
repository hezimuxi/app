.heart-rate-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f9f9fb;
  padding-top: 40rpx;
}
.header {
  font-size: 36rpx;
  color: #252525;
  font-weight: bold;
  margin-bottom: 60rpx;
  margin-top: 20rpx;
}
.round-btn-area {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

/* 圆形按钮带炫彩渐变，外发光呼吸 */
.round-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: linear-gradient(135deg, #60efbc 0%, #58d5c9 50%, #7766e6 100%);
  box-shadow: 0 12rpx 32rpx #72e5db55, 0 0 48rpx 4rpx #60efbc99;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  outline: none;
  padding: 0;
  transition: transform 0.18s cubic-bezier(.33,1.82,.38,.98), box-shadow .18s;
  position: relative;
  z-index: 1;
  overflow: visible;
}
.breath-anim {
  animation: breath 1.8s infinite alternate;
}
@keyframes breath {
  from { box-shadow: 0 0 22rpx 0 #58d5c977, 0 0 30rpx #7766e655; }
  to   { box-shadow: 0 0 42rpx 24rpx #60efbc55, 0 0 64rpx #58d5c955; }
}
.round-btn.pressed {
  transform: scale(1.08);
  box-shadow: 0 0 70rpx 20rpx #60efbc88, 0 0 90rpx 30rpx #7766e644;
}
.btn-text {
  z-index: 1;
  font-size: 32rpx;
  color: #fff;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.result-area {
  margin-top: 52rpx;
  text-align: center;
}
.result-text {
  font-size: 30rpx;
  color: #556;
  margin-bottom: 12rpx;
  display: inline-block;
}
.rate-value {
  margin-top: 18rpx;
  font-size: 40rpx;
  color: #e74c3c;
  font-weight: bold;
  display: block;
}

