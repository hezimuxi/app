<view class="snake-game-container">
  <!-- 分数和游戏画布 -->
  <block wx:if="{{!isGameOver}}">
    <view class="score-container">
      <text class="score-label">分数：</text>
      <text class="score-value">{{score}}</text>
    </view>
    <canvas canvas-id="snakeCanvas" class="game-canvas"></canvas>
    <view class="controls">
      <button class="control-button" bindtap="moveUp">↑</button>
      <view class="control-row">
        <button class="control-button" bindtap="moveLeft">←</button>
        <button class="control-button" bindtap="moveRight">→</button>
      </view>
      <button class="control-button" bindtap="moveDown">↓</button>
    </view>
  </block>

  <!-- 游戏结束界面 -->
  <block wx:if="{{isGameOver}}">
    <view class="game-over-container">
      <text class="game-over-text">YOU LOSE</text>
      <text class="score-text">你的得分是：{{finalScore}}</text>
      <button class="restart-button" bindtap="restartGame">重新开始</button>
    </view>
  </block>
</view>