.snake-game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(145deg, #8eb1e5, #c5e2f3);
}

/* 游戏计分样式 */
.score-container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  color: #333;
  margin-bottom: 10px;
}

.score-label {
  font-weight: bold;
}

.score-value {
  margin-left: 5px;
  color: #57ad68;
  font-weight: bold;
}

/* 游戏画布样式 */
.game-canvas {
  width: 300px;
  height: 300px;
  border: 1px solid #000;
  display: block;
}

/* 控制按钮 */
.controls {
  margin-top: 20px;
  text-align: center;
}

.control-row {
  display: flex;
  justify-content: center;
  gap: 10px;
}

.control-button {
  width: 60px;
  height: 60px;
  background-color: #57ad68;
  color: #fff;
  font-size: 18px;
  border: none;
  border-radius: 50%;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
  transition: transform 0.3s ease;
}

.control-button:active {
  transform: scale(0.9);
}

/* 游戏结束界面样式 */
.game-over-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.game-over-text {
  font-size: 24px;
  font-weight: bold;
  color: #ff0000;
  margin-bottom: 10px;
}

.score-text {
  font-size: 18px;
  color: #333;
  margin-bottom: 20px;
}

.restart-button {
  background-color: #57ad68;
  color: #fff;
  font-size: 16px;
  padding: 10px 20px;
  border: none;
  border-radius: 10px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
  transition: transform 0.3s ease;
}

.restart-button:active {
  transform: scale(0.9);
}